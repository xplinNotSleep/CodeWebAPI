@{
    ViewBag.Title = "文件管理表编辑";
    Layout = "~/Views/LayoutPageCommon.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight ibox-content">
    <form class="form-horizontal m" id="form-FileStorage-edit">
        <input name="Id" type="hidden"/>
        <div class="form-group col-xs-12 col-sm-6">
            <label class="row-form-item-label control-label">文件名:</label>
            <div class="row-form-item-content">
                <input name="FileName" class="form-control" type="text">
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            <label class="row-form-item-label control-label">文件路径:</label>
            <div class="row-form-item-content">
                <input name="FilePath" class="form-control" type="text">
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            <label class="row-form-item-label control-label">文件大小:</label>
            <div class="row-form-item-content">
                <input name="FileSize" class="form-control" type="text">
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            <label class="row-form-item-label control-label">扩展名:</label>
            <div class="row-form-item-content">
                <input name="FileExtension" class="form-control" type="text">
            </div>
        </div>
    </form>
</div>
@section footer{
<script inline="javascript">
    $(function(){
$.apioperate.get("/api/FileStorage/get/"+getRequestValue("id"), function (res2) {
        if (res2.Status == rpcresponse_status.SUCCESS) {
      $("#form-FileStorage-edit").bindForm(res2.Item);
    }});

    });

    $("#form-FileStorage-edit").validate({
        focusCleanup: true
    });

    function submitHandler() {
        if ($.validate.form()) {
            $.apioperate.update("/api/FileStorage/update", $('#form-FileStorage-edit').serializeJson());
        }
    }
</script>
}